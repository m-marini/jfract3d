	<category name="org.mmarini.history.model.commands.DebugCommand">
		<priority value="debug" />
	</category>

	<category name="org.mmarini.history.model.commands.PrintCommand">
		<priority value="info" />
	</category>

	<category name="org.mmarini.history.model.parser">
		<priority value="debug" />
	</category>

	<root>
		<priority value="error" />
		<appender-ref ref="console" />
